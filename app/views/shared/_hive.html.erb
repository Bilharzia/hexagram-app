<!DOCTYPE html>
<html class="h-full bg-gray-950">
<head>
  <meta charset="utf-8">
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white">

  <!-- Navbar -->
  <div class="fixed top-0 inset-x-0 z-50 bg-black/70 backdrop-blur-lg border-b border-purple-700">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
      <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">Hexagram</h1>
      <%= button_to "Salir", destroy_user_session_path, method: :delete, class: "text-red-400 hover:text-red-300" %>
    </div>
  </div>

  <!-- Breadcrumbs -->
  <div class="pt-24 pb-8 text-center">
    <div class="inline-flex items-center gap-3 text-purple-300">
      <%= link_to "Inicio", hive_path, class: "hover:underline" %>
      <% breadcrumbs.each do |hex| %>
        → <%= link_to hex.title, hive_path(hex), class: "hover:underline" %>
      <% end %>
    </div>
  </div>

  <!-- HEXÁGONOS REALES -->
  <div class="flex justify-center px-4">
    <div class="columns-2 sm:columns-3 md:columns-5 lg:columns-7 gap-8 space-y-12">
      <% hexes.each_with_index do |hex, i| %>
        <div class="<%= "mt-20" if i.even? %>">
          <%= link_to hive_path(hex), class: "group block" do %>
            <div class="w-44 h-52 mx-auto">
              <div class="hexagon bg-gradient-to-br from-purple-600 to-pink-600 group-hover:from-purple-500 group-hover:to-pink-500 transition-all duration-500 shadow-2xl group-hover:shadow-purple-500/50 group-hover:scale-110">
                <div class="hexagon-inner">
                  <% if hex.avatar.attached? %>
                    <%= image_tag hex.avatar.variant(resize_to_fill: [90,90]), class: "w-24 h-24 rounded-full border-4 border-white shadow-xl" %>
                  <% else %>
                    <div class="w-24 h-24 rounded-full bg-white/20 backdrop-blur flex items-center justify-center text-5xl font-bold">
                      <%= hex.title[0] %>
                    </div>
                  <% end %>
                  <p class="mt-3 text-lg font-semibold"><%= hex.title %></p>
                  <% if hex.folder_hex? %><span class="text-xs opacity-70">carpeta</span><% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- + -->
      <div class="mt-20">
        <div class="w-44 h-52 mx-auto">
          <div class="hexagon bg-white/10 border-4 border-dashed border-purple-400 hover:border-purple-300 cursor-pointer flex items-center justify-center text-7xl text-purple-400 hover:text-white transition">
            +
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .hexagon {
      width: 100%;
      height: 100%;
      clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .hexagon-inner {
      width: 85%;
      height: 85%;
      background: rgba(0,0,0,0.4);
      clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
  </style>

</body>
</html>
