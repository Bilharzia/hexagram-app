<div class="min-h-screen bg-gradient-to-br from-slate-950 via-purple-950 to-slate-950 p-8">
  <!-- Breadcrumbs -->
  <div class="mb-12 flex items-center gap-4 text-purple-300 text-xl">
    <%= link_to "Inicio", hive_path, class: "hover:text-white transition" %>
    <% if @breadcrumbs.present? %>
      <% @breadcrumbs.each do |hex| %>
        <span class="text-purple-500">→</span>
        <%= link_to hex.title, hive_hex_path(hex), class: "hover:text-white transition" %>
      <% end %>
    <% end %>
  </div>

  <!-- Grid honeycomb -->
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-7 gap-6">
    <% @hexes.each_with_index do |hex, i| %>
      <div class="<%= i.odd? ? 'mt-16' : '' %>">
        <%= link_to hive_hex_path(hex), class: "group block" do %>
          <div class="relative w-40 h-48 mx-auto">
            <div class="absolute inset-0 hex-clip bg-gradient-to-br from-purple-600 to-pink-600 shadow-2xl group-hover:scale-110 transition-transform duration-300 group-hover:shadow-purple-500/50"></div>
            <div class="absolute inset-2 hex-clip bg-black/60 flex flex-col items-center justify-center">
              <div class="w-20 h-20 rounded-full bg-white flex items-center justify-center text-2xl font-bold mb-3">
                <%= hex.title.first %>
              </div>
              <p class="text-base font-semibold text-center"><%= hex.title %></p>
              <% if hex.folder_hex? %>
                <span class="text-xs opacity-70">carpeta</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Botón + -->
    <div class="mt-16">
      <div class="relative w-40 h-48 mx-auto">
        <div class="absolute inset-0 hex-clip bg-gray-800 border-2 border-dashed border-purple-500 rounded-lg flex items-center justify-center text-5xl hover:bg-purple-900/50 transition cursor-pointer">
          +
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.hex-clip {
  clip-path: polygon(30% 0%, 70% 0%, 100% 50%, 70% 100%, 30% 100%, 0% 50%);
}
</style>
